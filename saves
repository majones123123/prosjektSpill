      function leggtilnavn() {
        const inputField = document.getElementById("leggtilnavn");
        
        if (!inputField) {
          console.error("Input field with ID 'leggtilnavn' not found.");
          return;
        }

        const leggtilnavn = inputField.value;

        if (leggtilnavn !== "") {
          console.log(`Velkommen, ${leggtilnavn}!`);
          // Gj√∏r input container usynlig
          document.getElementById("navn-container").style.display = "none";

          // Vis start-container
          document.getElementById("start-container").style.display = "block";
        } else {
          alert("Vennligst legg til navnet ditt");
        }      
      }


      .navn-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.8);
        border: 2px solid #ccc;
        border-radius: 10px;
        max-width: 300px;
        margin: auto;
      }
      
      .navn-container input {
        padding: 10px;
        width: 100%;
        border: 1px solid #ccc;
